db.createCollection(
    "carreras",
    {
        validator:{
            $jsonSchema:{
                bsonType: "object",
                description: "Validaci√≥n de documentos de las carreras",
                required: [
                    "_id",
                    "usuario_id",
                    "nombre"
                ],
                properties: {
                    "_id":{
